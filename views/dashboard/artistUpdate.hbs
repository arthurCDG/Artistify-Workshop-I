<h1>Hey</h1>

<form action="/dashboard/artists/update/{{artist._id}}" method="POST">
    <label for="name">Name</label>
    <input type="text" name="name" value="{{artist.name}}">
    <label for="isBand">This artist is a band</label>
        <select name="isBand">
            {{#select artist.isBand}}
            <option value="true">True</option>
            <option value="false">False</option>
            {{/select}}
        </select>
    <label for="description">Description</label>
    <input type="text" name="description" value="{{artist.description}}">
    <button>Submit</button>
</form>